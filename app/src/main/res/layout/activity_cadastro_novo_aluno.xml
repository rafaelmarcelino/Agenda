<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Activities.StoreNewStudent">

        <EditText
            android:id="@+id/activity_cadastrar_aluno_nome"
            android:hint="@string/name_student"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:importantForAutofill="no">
        </EditText>
        <EditText
            android:id="@+id/activity_cadastrar_aluno_telefone"
            android:hint="@string/telephone_student"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:importantForAutofill="no">
        </EditText>
        <EditText
            android:id="@+id/activity_cadastrar_aluno_email"
            android:hint="@string/email_student"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no">
        </EditText>

        <RadioGroup
            android:id="@+id/activity_cadastrar_aluno_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <RadioButton
                android:id="@+id/activity_cadastrar_aluno_gen_masc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/gender_masc">
            </RadioButton>
            <RadioButton
                android:id="@+id/activity_cadastrar_aluno_gen_fem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/gender_fem">
            </RadioButton>
        </RadioGroup>

    </LinearLayout>